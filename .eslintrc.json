{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base", "react-app", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                ".js",
                ".jsx"
                ]
            }
        }
    },
    "plugins": ["react", "import", "react-hooks"],
    "parser": "babel-eslint",
    "rules": {
        "react-hooks/rules-of-hooks": 2,
        "react-hooks/exhaustive-deps": 0,
        "no-unused-vars": 1
    }
}